<!doctype>

html(lan="es" ng-app="miapp")
  head
    meta(charset="UTF-8")
    meta(name='viewport' content="width=device-width, initial-scale=1.0")
    title Mercado Iquitos - Compra y venta en iquitos sin comisión

  body
    header
      nav.navbar.navbar-custom
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a(href="#")
              img(src='img/logo-ch2.png' style='height:50px; padding: 4px')
            //- img.visible-xs(src='img/logo-solo.png' style='height:50px')
        
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
        

            form.navbar-form.navbar-left(role='search')

              .input-group(ng-controller='resultadosCtrl')
                input.form-control#buscador(type="text" ng-model='criterio' placeholder="encontrar..." uib-popover="escribe lo que buscas" popover-trigger="mouseenter" popover-placement='bottom')
                span.input-group-btn
                  button.btn.btn-default(type='submit' style='height:34px' ng-click='buscar()')
                    i.glyphicon.glyphicon-search
              //- .form-group
                input.form-control#buscador(type='text', placeholder='encontrar...' )               
                button.btn.btn-primary(type='submit')
                  i.glyphicon.glyphicon-search
            ul.nav.navbar-nav.navbar-right(ng-controller='loginCtrl')

              li: a(href='#/registrar' ng-hide='FBLogged')
                i.fa.fa-user-plus.IconMenu
                | Registrate
              li: a(ng-click='Login()' ng-hide='FBLogged') 
                i.fa.fa-user.IconMenu
                | Ingresa
              li.dropdown
                a.dropdown-toggle(data-toggle='dropdown',ng-show='FBLogged', role='button', aria-haspopup='true', aria-expanded='false' style='padding:10px')
                  | {{FBUsuario}} 
                  img(ng-show='FBLogged' ng-src='http://graph.facebook.com/{{FBCodUser}}/picture?type=small' style='height:30px; margin-left:10px')
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='#') 
                      i.glyphicon.glyphicon-th-list.IconMenu
                      | Resumen
                  li
                    a(href='#') 
                      i.glyphicon.glyphicon-shopping-cart.IconMenu
                      | Mis Compras
                  li
                    a(href='#') 
                      i.glyphicon.glyphicon-tags.IconMenu
                      | Mis Ventas

                  li.divider(role='separator')
                  li
                    a(href='#') 
                      i.glyphicon.glyphicon-cog.IconMenu
                      | Configuración
                  li.divider(role='separator')
                  li
                    a(ng-click='LogOut()') 
                      i.glyphicon.glyphicon-log-out.IconMenu
                      | Cerrar Sesión
              li: a(href='#/vender')
                i.fa.fa-shopping-cart.IconMenu
                | Vender
              li: a(href='#')
                i.glyphicon.glyphicon-question-sign.IconMenu

    section#cuerpo(ng-view)
    footer(src='img/bg.png' style='padding:30px 15px; background:url(img/bgo.png)')
      .container-fluid
        .row
          .col-xs-4.col-sm-4.col-md-4.col-xl-4
            h4(style='text-align:center') Quienes Somos
            ul              
              li: a(href="#") Misión
              li: a(href="#") Visión
              li: a(href="#") Valores

          .col-xs-4.col-sm-4.col-md-4.col-xl-4
            h4(style='text-align:center') Ayuda
            ul              
              li: a(href="#") Comprar
              li: a(href="#") Vender
              li: a(href="#") Ayuda

          .col-xs-4.col-sm-4.col-md-4.col-xl-4
            h4(style='text-align:center') Redes Sociales
            ul              
              li: a(href="#") Facebook
              li: a(href="#") Twiter
              li: a(href="#") Youtube
