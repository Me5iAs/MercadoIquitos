section#resultado
  .container-fluid
    .row
      //- filtros
      .hidden-xs.hidden-sm.col-md-2.col-lg-2.col-xl-2(style='padding-left:0px')
        ul(style='list-style:none; padding:0px')
          li(ng-repeat='itempadre in filtro' style='padding-bottom:10px'): {{itempadre.Titulo}}
            ul(style='list-style:none; padding:0px')
              li(ng-repeat='item in itempadre.items' style="font-family:'arial narrow'") 
                input(type="checkbox" ng-model="checkboxModel.value2") 
                a(ng-click='checkboxModel.value2=!checkboxModel.value2') {{item}}

      //- resultado
      .col-xs-12.col-sm-12.col-md-10.col-lg-8.col-xl-8(style='background:white; border:1px solid #DDD; border-radius:3px; padding:10px; margin-bottom:50px; box-shadow:0px 0px 20px #DDD')
        .containter-fluid      
          //- .caja(style='background:red; border:1px solid black; border-color:#000')
            .imagen.col-xs-4-col-sm-4.col-md-4.col-lg-4.col-xl-4
              img(ng-src="img/1.jpg")
            .cuerpo.col-xs-8-col-sm-8.col-md-8.col-lg-8.col-xl-8
              h4 titulo 1
              span S/ precop
          //- filtros
          .row
            //- orden
            .col-xs-12.col-sm-6.col-md-6.col-lg-6.col-xl-6 
              .btn-group(uib-dropdown='')
                button.btn.btn-primary(type='button', uib-dropdown-toggle='') ordenar por :{{listaOrden[vista.orden]}} 
                  span.caret
                ul(uib-dropdown-menu='', role='menu', aria-labelledby='single-button')
                  li(role='menuitem' ng-repeat='orden in listaOrden')
                    a(href='' ng-click='vista.orden=$index') {{orden}} 
              
            .col-xs-12.col-sm-6.col-md-6.col-lg-6.col-xl-6(style="text-align:right")
              .btn-group(uib-dropdown='')
                button.btn.btn-primary(type='button', uib-dropdown-toggle='')
                  | ver: {{listaVistas[vista.vista]}} 
                  span.caret
                ul(uib-dropdown-menu='', role='menu', aria-labelledby='single-button')
                  li(role='menuitem' ng-repeat='orden in listaVistas')
                    a(href='' ng-click='vista.vista=$index') {{orden}}  
                    //- .col-offset-4


          .row(ng-repeat="art in resultados" style='border-top:1px solid #eee; margin:15px; padding-top:15px')
            .resultados-imagen.col-xs-4-col-sm-4.col-md-4.col-lg-4.col-xl-4
              a(href="#")                
                img(ng-src="img/{{art.imagen}}")
            .cuerpo.col-xs-8-col-sm-8.col-md-8.col-lg-8.col-xl-8
              h4 
                a(href="#") {{art.Articulo}}
              
              ul(style='list-style:none outside none')
                li.resultados-precio Precio S/ {{art.Precio}}
                li.resultados-detalle {{art.comentario}}


          .row(style='margin:0px 15px')            
            //- uib-pagination(total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()")
            uib-pagination(
              boundary-links="true" 
              items-per-page='itemxpag'              
              total-items="resultados.length"              
              ng-model="paginaActual" 
              class="pagination-sm" 
              previous-text="<"
              next-text=">" 
              first-text="<<" 
              last-text=">>"
              ng-change="pageChanged()"
              )
              
