                                      button.btn.btn-success.btn-xs(type="button" ng-click="item.upload()" ng-disabled="item.isReady || item.isUploading || item.isSuccess") Upload
                                        span.glyphicon.glyphicon-upload
                                      
                                      button.btn.btn-warning.btn-xs(type="button" ng-click="item.cancel()" ng-disabled="!item.isUploading") Cancel
                                        span.glyphicon.glyphicon-ban-circle
                                        
                                      button.btn.btn-danger.btn-xs(type="button" ng-click="item.remove()") Remove
                                        span.glyphicon.glyphicon-trash
                                    
                              div
                                div Queue progress:
                                  div.progress(style="")
                                    div.progress-bar(role="progressbar" ng-style="{ 'width': uploader.progress + '%' }")
                                  
                              
                                button.btn.btn-success.btn-s(type="button" ng-click="uploader.uploadAll()" ng-disabled="!uploader.getNotUploadedItems().length") Upload all
                                  span.glyphicon.glyphicon-upload
                              
                                button.btn.btn-warning.btn-s(type="button" ng-click="uploader.cancelAll()" ng-disabled="!uploader.isUploading") Cancel all
                                  span.glyphicon.glyphicon-ban-circle
                                
                                button.btn.btn-danger.btn-s(type="button" ng-click="uploader.clearQueue()" ng-disabled="!uploader.queue.length") Remove all
                                  span.glyphicon.glyphicon-trash
              
