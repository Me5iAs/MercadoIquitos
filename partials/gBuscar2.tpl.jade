div.modal-header
  button.close(type="button" data-ng-click="cerrar()") &times;
  h3 {{Titulo}}

div.modal-body
  form(name='inputform')
  div
    p {{Mensaje}}
    div.input-group(style='text-align:center')
      input#gBuscarCriterio.form-control(type="text" style='margin-bottom: 5px' placeholder='Ingrese el criterio de b√∫squeda' ng-model="Criterio" g-Saltar='Buscar()' required)
      span.input-group-btn
        button.btn.btn-default(style='margin-bottom:5px' ng-disabled='inputform.$invalid' ng-Click='Buscar()') Buscar!
    
    g-Tabla data
    alert(type="danger" ng-show='MostrarMensaje') No se han encontrado datos
